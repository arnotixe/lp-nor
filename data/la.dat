def classical(wxx, w):
    wu = w.replace("v", "u")
    if wu == wxx[:len(wu)]:
        return w + wxx[len(wu) + 1:]
    if wu.capitalize() == wxx[:len(wu)]:
        return w.capitalize() + wxx[len(wu) + 1:]
    return suggest(wxx)
